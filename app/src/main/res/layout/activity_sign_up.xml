<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoginActivity"
    android:background="@color/backgroundYellow">

    <TextView
        android:id="@+id/tvLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EatTogether"
        android:layout_marginTop="60dp"
        android:textColor="@color/darkGrayText"
        android:layout_centerHorizontal="true"
        android:textSize="42sp"
        android:fontFamily="@font/questrial_regular"/>

    <EditText
        android:id="@+id/etFirstName"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:hint="First Name"
        android:layout_below="@+id/tvLogo"
        android:background="@drawable/input_box"
        android:backgroundTint="@android:color/white"
        android:textSize="22sp"
        android:paddingTop="3dp"
        android:layout_marginTop="5dp"
        android:paddingStart="15dp"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="36dp"
        android:fontFamily="@font/questrial_regular"
        />

    <EditText
        android:id="@+id/etUsername"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:hint="Username"
        android:layout_below="@+id/etFirstName"
        android:background="@drawable/input_box"
        android:layout_marginTop="10dp"
        android:paddingStart="15dp"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="36dp"
        android:fontFamily="@font/questrial_regular"
        android:backgroundTint="@android:color/white"
        android:textSize="22sp"
        android:paddingTop="3dp"/>

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:layout_below="@+id/etUsername"
        android:background="@drawable/input_box"
        android:layout_marginTop="10dp"
        android:paddingStart="15dp"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="36dp"
        android:fontFamily="@font/questrial_regular"
        android:backgroundTint="@android:color/white"
        android:textSize="22sp"
        android:paddingTop="3dp"/>

    <EditText
        android:id="@+id/etCity"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:hint="City"
        android:layout_below="@+id/etPassword"
        android:background="@drawable/input_box"
        android:layout_marginTop="10dp"
        android:paddingStart="15dp"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="36dp"
        android:fontFamily="@font/questrial_regular"
        android:backgroundTint="@android:color/white"
        android:textSize="22sp"
        android:paddingTop="3dp"/>

    <EditText
        android:id="@+id/etState"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:hint="State"
        android:layout_below="@+id/etCity"
        android:background="@drawable/input_box"
        android:layout_marginTop="10dp"
        android:paddingStart="15dp"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="36dp"
        android:backgroundTint="@android:color/white"
        android:textSize="22sp"
        android:paddingTop="3dp"
        android:fontFamily="@font/questrial_regular" />

    <ImageView
        android:id="@+id/ivProfilePicture"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:src="@drawable/default_avatar"
        android:layout_below="@id/etState"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/etBio"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:hint="Set a bio"
        android:layout_below="@+id/ivProfilePicture"
        android:background="@drawable/input_box"
        android:layout_marginTop="10dp"
        android:paddingStart="15dp"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="36dp"
        android:fontFamily="@font/questrial_regular"
        android:backgroundTint="@android:color/white"
        android:textSize="22sp"
        android:paddingTop="3dp"/>

    <Button
        android:id="@+id/btnSignUp"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:textAllCaps="false"
        android:textSize="22sp"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/colorAccent"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/questrial_regular"
        android:background="@drawable/input_box"
        style="?android:attr/borderlessButtonStyle"
        android:layout_below="@id/etBio"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>