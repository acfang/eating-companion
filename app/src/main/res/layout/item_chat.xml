<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/ivChatPicture"
        android:layout_width="120dp"
        android:layout_height="120dp"
        tools:srcCompat="@tools:sample/avatars"
        android:padding="10dp"/>

    <TextView
        android:id="@+id/tvRestaurantName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        tools:text="In-N-Out Burger"
        android:textSize="22sp"
        android:layout_toEndOf="@id/ivChatPicture"
        android:textColor="@color/darkGrayText"
        android:fontFamily="@font/questrial_regular"
        android:layout_marginStart="5dp"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="7/10/20, 12:15pm"
        android:textSize="18sp"
        android:layout_below="@id/tvRestaurantName"
        android:textColor="@color/darkGrayText"
        android:fontFamily="@font/questrial_regular"
        android:layout_alignStart="@id/tvRestaurantName"
        android:layout_marginTop="-5dp"/>

    <TextView
        android:id="@+id/tvMessagePreview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="2"
        tools:text="Taylor: Yeah, let's meet up by the front entrance! I'll be wearing a white shirt..."
        android:layout_below="@+id/tvTime"
        android:layout_alignStart="@id/tvTime"
        android:textSize="16sp"
        android:textColor="@color/lightGrayText"
        android:fontFamily="@font/questrial_regular"/>

    <View
        android:id="@+id/vDividingLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grayLine"
        android:visibility="visible"
        android:layout_marginStart="0dp"
        android:layout_below="@id/ivChatPicture" />

</RelativeLayout>